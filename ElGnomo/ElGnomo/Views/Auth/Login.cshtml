@using ElGnomoModels.ViewModels
@model UserView
@{
    Layout = "_AuthLayout";
}

<div class="container">
    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                    <div class="d-flex justify-content-center py-4">
                        <a href="index.html" class="logo d-flex align-items-center w-auto">
                            <img src="~/assets/img/logo.png" alt="">
                            <span class="d-none d-lg-block">ElGnomo</span>
                        </a>
                    </div><!-- End Logo -->
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="pt-4 pb-2">
                                <h5 class="card-title text-center pb-0 fs-4">Iniciar Sesi&oacute;n</h5>
                            </div>

                            <form class="row g-3 needs-validation" asp-action="Login" asp-controller="Auth" novalidate>
                                <div class="col-12">
                                    <label class="form-label">Correo electr&oacute;nico</label>
                                    <div class="input-group has-validation">
                                        <input type="text" asp-for="Email" class="form-control" required>
                                        <div class="invalid-feedback">El correo electr&oacute;nico es necesario.</div>
                                    </div>
                                </div>

                                <div class="col-12">
                                    <label class="form-label">Contrase&ntilde;a</label>
                                    <input type="password" name="password" asp-for="Password" class="form-control" required>
                                    <div class="invalid-feedback">La contrase&ntilde;a es necesaria</div>
                                </div>

                                <div class="col-12">
                                    <button class="btn btn-primary w-100" type="submit">Iniciar Sesi&oacute;n</button>
                                </div>
                                <div class="col-12">
                                    <p class="small mb-0">¿No tienes una cuenta? <a href="@Url.Action("Register")">Crear una cuenta</a></p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>