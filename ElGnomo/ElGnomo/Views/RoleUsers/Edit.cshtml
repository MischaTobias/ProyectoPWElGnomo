@model ElGnomoModels.ViewModels.RoleUsersView

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>RoleUsers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="row">
                <div class="form-group col-6">
                    <label asp-for="User" class="control-label"></label>
                    <select asp-for="UserId"
                            asp-items="@Model.Users"
                            class="form-control"
                            onchange="UserChanged()"></select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.User)
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="User.Email" class="form-control" readonly />
                    </dd>
                </dl>
                <div class="form-group col-6">
                    <label asp-for="Role" class="control-label"></label>
                    <select asp-for="RoleId"
                            asp-items="@Model.Roles"
                            class="form-control"
                            onchange="RoleChanged()"></select>
                    <span asp-validation-for="RoleId" class="text-danger"></span>
                </div>
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Role)
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="Role.Name" class="form-control" readonly />
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Role.Description)
                    </dt>
                    <dd class="col-sm-10">
                        <input asp-for="Role.Description" class="form-control" readonly />
                    </dd>
                </dl>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
